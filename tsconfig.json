{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "target": "es2015",
    "types": ["node", "jest"]
  },
  "include": [
    "./lib/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/elm-stuff/"
  ]
}
